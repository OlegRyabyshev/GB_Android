<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item> //Верхний бар
        <item name="colorOnPrimary">@color/grayDark</item> //непонятно что меняет
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--<item name="android:navigationBarColor">@color/color_white</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttonFontSize</item>
    </style>

    <style name="ViewStyle" parent="@android:style/Widget.Material.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:freezesText">true</item>
        <item name="android:gravity">right|top</item>
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">true</item>
    </style>
</resources>